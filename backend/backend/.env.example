# ======================================
# BASIC SERVER CONFIG
# ======================================
PORT=5000
NODE_ENV=development

# ======================================
# DATABASE (PostgreSQL)
# ======================================
DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/ps_ai_tool?schema=public"

# ======================================
# REDIS
# ======================================
REDIS_URL=redis://localhost:6379

# ======================================
# JWT AUTH SECRETS
# ======================================
JWT_ACCESS_SECRET=your_jwt_access_secret_key
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ======================================
# QR ENCRYPTION SECRET (AES-256-GCM)
# 32 bytes required (base64 or hex)
# ======================================
QR_ENCRYPTION_KEY=your_32_byte_encryption_key

# ======================================
# EMAIL SETTINGS
# ======================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
FROM_EMAIL=no-reply@ps-ai.com

# ======================================
# FILE STORAGE OPTIONS
# local OR s3
# ======================================
FILE_STORAGE=local

# ======================================
# S3 STORAGE (ONLY IF FILE_STORAGE=s3)
# ======================================
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# ======================================
# BLOCKCHAIN WALLETS (CRYPTO DEPOSITS)
# Yeh aapke receiving wallets hain
# ======================================
BTC_WALLET_ADDRESS=your_btc_wallet_address
ETH_WALLET_ADDRESS=your_eth_wallet_address
BNB_WALLET_ADDRESS=your_bnb_wallet_address
DOGE_WALLET_ADDRESS=your_doge_wallet_address
USDT_TRC20_WALLET_ADDRESS=your_usdt_trc20_wallet_address

# ======================================
# BLOCKCHAIN EXPLORER KEYS (OPTIONAL)
# ======================================
BTC_EXPLORER_KEY=
ETHERSCAN_API_KEY=
TRONSCAN_API_KEY=

# ======================================
# AFFILIATE SYSTEM
# ======================================
AFFILIATE_DEFAULT_RATE=0.20
AFFILIATE_PAYOUT_DAYS=15
AFFILIATE_MIN_PAYOUT=2000

# ======================================
# ADMIN DEFAULT ACCOUNT
# ======================================
ADMIN_EMAIL=admin@ps-ai.com
ADMIN_PASSWORD=admin123
